<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

  <title>Featured Projects</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include('header'); %>

  <main class="py-5">
    <div class="container">
      <div class="text-center mb-5">
        <h1 class="display-4">Featured Projects</h1>
        <p class="lead" style="color:#ffaab8;">
          Deeper, longform project pages.
        </p>
      </div>

      <% if (!featuredArray || featuredArray.length === 0) { %>
        <div class="text-center">
          <p class="lead">No featured projects yet.</p>
          <a href="/projects" class="btn btn-outline-primary">View all projects</a>
        </div>
      <% } else { %>

        <div class="row g-4">
          <% featuredArray.forEach((p, index) => { %>
            <div class="col-12">
              <a href="/projects/<%= p.slug %>" class="featured-link">
                <div class="featured-tile shadow <%= index % 2 === 1 ? 'reverse' : '' %>">
                  <div class="featured-media">
                    <img
                      src="<%= p.cover_url %>"
                      alt="<%= p.title %>"
                      loading="lazy"
                    />
                  </div>

                  <div class="featured-copy">
                    <h2 class="h1 mb-2"><%= p.title %></h2>

                    <div class="mb-3" style="color:#ffaab8;">
                      <%= p.medium %> â€¢ <%= p.format %>
                    </div>

                    <% if (p.description) { %>
                      <p class="mb-0 featured-desc"><%= p.description %></p>
                    <% } %>
                  </div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>

        <div class="mt-5 text-center">
          <a href="/projects" class="btn btn-outline-primary btn-lg">View full gallery</a>
        </div>

      <% } %>
    </div>
  </main>

 <div class="container">
   
<!-- footer section -->

<%- include('footer'); %>


    </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/nav.js"></script>
</body>
</html>
