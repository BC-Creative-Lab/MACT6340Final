<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <title>Personal Portfolio</title>
    <meta name="author" content="Tracy Hiner">
    <meta name="description" content="A personal portfolio for an artist.">
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap" rel="stylesheet">
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>


<body>

<%- include('header'); %>
       
   
 <main>
        <!-- Splash page -->
       <section id="splash" class="d-flex justify-content-center align-items-center">
    <div id="hero-text" class="text-center text-black hero-inner">
        <h1 class="display-1">Black Crow Creative Lab</h1>

        <p class="fs-3 lead mb-4">
            A private playground for unruly ideas.
        </p>

        <img
            src="/images/black-crow-logo_crow-only high res.png"
            alt="Black Crow Creative Lab logo"
            width="100"
            height="100"
            class="d-block mx-auto"
        />
    </div>
</section>

<!-- Featured Project-->
<section>
  <div class="b-example-divider"></div>
  <div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">

      <div class="col-10 col-sm-8 col-lg-6">
        <img
          src="<%= featuredProject.cover_url %>"
          class="d-block mx-lg-auto img-fluid"
          alt="<%= featuredProject.title %>"
          width="700"
          height="500"
          loading="lazy"
        />
      </div>

      <div id="featuredInfo" class="col-lg-6">
        <h1 class="display-5 fw-bold lh-1 mb-3">Featured Project</h1>

        <div class="lead m-2" style="color:#ffaab8">
          <div>Name: <%= featuredProject.title %></div>
          <div>Description: <%= featuredProject.description %></div>
        </div>

        <div class="d-grid gap-2 mt-3">
          <a href="/projects/<%= featuredProject.slug %>" class="btn btn-primary btn-lg px-4 me-md-2 mb-3">
            view this project
          </a>

          <a href="/projects" class="btn btn-outline-primary btn-lg px-4">
            view all projects
          </a>
        </div>

      </div>
    </div>
  </div>
</section>

 <!-- Homepage Gallery Picks (3) -->
<section>
  <div class="container px-4 pb-5">
    <h2 class="mb-4" style="color:#ffaab8">From the Gallery</h2>

    <div class="row g-4">
      <% homeProjects.forEach((p) => { %>
        <div class="col-12 col-md-4">
          <div class="card h-100 fadein">
            <img
              src="<%= p.cover_url %>"
              class="card-img-top"
              alt="<%= p.title %>"
              loading="lazy"
            />
            <div class="card-body text-center">
              <h5 class="card-title"><%= p.title %></h5>
            </div>
            <div class="card-footer text-center">
              <a href="/projects/<%= p.slug %>" class="btn btn-primary">Project Profile</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="mt-4 text-center">
      <a href="/projects" class="btn btn-outline-primary">View full gallery</a>
    </div>
  </div>
</section>



    <div class="container">
   
<!-- footer section -->

<%- include('footer'); %>


    </div>
    <script src="/js/nav.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
                    crossorigin="anonymous"></script>
 <script type="module" src="/js/index.js"></script>
</body>
</html>

