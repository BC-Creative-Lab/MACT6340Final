<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <title><%= project.title %></title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include('header'); %>


 <!-- Full-bleed hero (video if available, else image) -->
<%
  const heroVideo = (project.media || []).find(m => m.role === 'hero' && m.media_type === 'video');
%>

<section class="w-100">
  <% if (heroVideo) { %>
    <div style="width:100%; max-height: 80vh; overflow:hidden;">
      <video
        autoplay
        muted
        loop
        playsinline
        style="width:100%; height:auto; display:block;"
      >
        <source src="<%= heroVideo.url %>" type="video/mp4" />
      </video>
    </div>
  <% } else if (project.cover_url) { %>
    <div style="width:100%; max-height: 80vh; overflow:hidden;">
      <img
        src="<%= project.cover_url %>"
        alt="<%= project.title %> hero"
        style="width:100%; height:auto; display:block;"
        loading="lazy"
      />
    </div>
  <% } %>

  <div class="container py-5">
    <h1 class="display-2 mb-2"><%= project.title %></h1>
    <div class="lead" style="color:#ffaab8;">
      <%= project.medium %> • <%= project.format %>
      <% if (project.created_date) { %>
        • <%= String(project.created_date).slice(0,4) %>
      <% } %>
    </div>
  </div>
</section>


  <!-- Content -->
  <main class="pb-5">
    <div class="container">

      <!-- Metadata block -->
      <div class="row g-4 mb-5">
        <div class="col-lg-4">
          <div class="p-4 shadow" style="border-radius: 16px; border: 1px solid rgba(255,170,184,0.25);">
            <h3 class="h5 mb-3" style="color:#ffaab8;">Details</h3>

            <div class="mb-2"><strong>Medium:</strong> <%= project.medium %></div>
            <div class="mb-2"><strong>Format:</strong> <%= project.format %></div>

            <% if (project.created_date) { %>
              <div class="mb-2"><strong>Date:</strong> <%= String(project.created_date).slice(0,10) %></div>
            <% } %>

            <!-- Add more fields later (tools, location, duration, etc.) -->
            <div class="mt-3">
              <a href="/projects" class="btn btn-outline-primary w-100">Back to Projects</a>
            </div>
          </div>
        </div>

        <!-- Longform text -->
        <div class="col-lg-8">
          <h2 class="mb-3" style="color:#ffaab8;">Overview</h2>
          <p class="fs-5"><%= project.description %></p>

          <!-- You can add more sections later, even before adding DB fields -->
          <h2 class="mt-4 mb-3" style="color:#ffaab8;">Process</h2>
          <p class="fs-5">
            <!-- Replace this paragraph with your real process text for the featured project -->
            This work explores transformation through system behavior, iteration, and emergence. I’m treating the featured page as a deeper “studio note” space—concept, process, and documentation in one place.
          </p>
        </div>
      </div>

      <!-- Gallery (click-to-expand) -->
     <%
  const gallery = (project.media || []).filter(m =>
    m.role === 'gallery' &&
    (m.media_type === 'image' || m.media_type === 'video')
  );
%>

<% if (gallery.length) { %>
  <div class="mt-5">
    <h2 class="mb-3" style="color:#ffaab8;">Gallery</h2>

    <div class="row g-3">
      <% gallery.forEach((m) => { %>
        <div class="col-12 col-sm-6 col-lg-4">
          <div class="shadow" style="border-radius:12px; overflow:hidden;">
            <% if (m.media_type === 'image') { %>
              <img
                src="<%= m.url %>"
                alt="<%= m.alt_text || project.title %>"
                class="img-fluid"
                loading="lazy"
              />
            <% } else if (m.media_type === 'video') { %>
              <video
                class="w-100"
                autoplay
                muted
                loop
                playsinline
                controls
              >
                <source src="<%= m.url %>" type="video/mp4" />
              </video>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
<% } %>

        

    </div>
  </main>

  <%- include('footer'); %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/nav.js"></script>

  <script>
    (function () {
      const gallery = window.__GALLERY__ || [];
      if (!gallery.length) return;

      const modalEl = document.getElementById("galleryModal");
      const modalImg = document.getElementById("modalImage");
      const caption = document.getElementById("modalCaption");
      const prevBtn = document.getElementById("prevBtn");
      const nextBtn = document.getElementById("nextBtn");

      let currentIndex = 0;

      function showAt(index) {
        currentIndex = (index + gallery.length) % gallery.length;
        const item = gallery[currentIndex];
        modalImg.src = item.url;
        modalImg.alt = item.alt || "";
        caption.textContent = item.alt || "";
      }

      document.querySelectorAll('[data-bs-target="#galleryModal"][data-index]').forEach(btn => {
        btn.addEventListener("click", () => showAt(Number(btn.getAttribute("data-index"))));
      });

      prevBtn.addEventListener("click", () => showAt(currentIndex - 1));
      nextBtn.addEventListener("click", () => showAt(currentIndex + 1));

      modalEl.addEventListener("shown.bs.modal", () => modalEl.focus());
      modalEl.addEventListener("keydown", (e) => {
        if (e.key === "ArrowLeft") showAt(currentIndex - 1);
        if (e.key === "ArrowRight") showAt(currentIndex + 1);
      });
    })();
  </script>
</body>
</html>
