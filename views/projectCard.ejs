<div class="card m-2 h-100 fadein">
  <img
    src="<%= image %>"
    class="card-img-top"
    alt="An image of the <%= name %> project"
    loading="lazy"
  >

  <div class="card-title col text-center">
    <h3><%= name %></h3>
  </div>

  <div class="card-footer">
    <a href="/projects/<%= slug %>" class="btn btn-primary">Project Profile</a>
  </div>
</div>
